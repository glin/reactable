Package: reactable
Type: Package
Title: Interactive Data Tables Based on 'React Table'
Version: 0.2.3.9000
Authors@R: c(
    person("Greg", "Lin", email = "glin@glin.io", role = c("aut", "cre")),
    person("Tanner", "Linsley", role = c("ctb", "cph"), comment = "React Table library"),
